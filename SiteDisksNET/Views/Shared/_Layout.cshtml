<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - World Wide Local Solution</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="keywords" content="Melbourne Digital Agency, Melbourne Website design, Web application, eCommerce, CMS, SEO, online marketing">
    <meta name="description" content="SiteDisks provides one-stop web solution in Melbourne. Professional in Website design, Web application, Online Marketing, SEO and Open-source CMS. Cheap and affordable website design and SEO specialist.">
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/sitecss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">
                        <img src="~/images/Sitedisks_logo_II_180.png" /></a>

                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Services", "Services", "Home")</li>
                        <li>@Html.ActionLink("Portfolio", "Portfolio", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    @RenderSection("featured", required: false)
    @RenderBody()

    <hr class="featurette-divider">
    <footer>
        <div class="container">
            <p class="pull-right"><a href="#">Back to top</a></p>
            <p>
                © 2013 SiteDisks, Inc. &middot;
                <a href="https://www.facebook.com/SiteDisks1" target="_blank">
                    <img src="~/images/icons/sitedisks-facebook-30.png" /></a>&nbsp;
                <a href="https://twitter.com/SiteDisks" target="_blank">
                    <img src="~/images/icons/sitedisks-twitter-30.png" /></a>&nbsp;
                <a href="https://plus.google.com/+SitedisksAu" target="_blank">
                    <img src="~/images/icons/sitedisks-google-30.png" /></a>&nbsp;
                <a href="http://instagram.com/" target="_blank">
                    <img src="~/images/icons/sitedisks-instagram-30.png" /></a>&nbsp;
            </p>
        </div>
    </footer>

    @*@Scripts.Render("~/bundles/sitejs")*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/sitedisks")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/jqueryval")
 
    <!-- google anayltics -->
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-37554430-3', 'auto');
        ga('send', 'pageview');

    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
